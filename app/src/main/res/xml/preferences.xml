<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Basic Settings">

    <CheckBoxPreference
        android:key="checkbox"
        android:summary="Clique Para Activar/ Desactivar"
        android:title="Activar Notificaoes" />

    <EditTextPreference
        android:dialogTitle="Enter a text"
        android:key="text"
        android:summary="Clique para Editar"
        android:title="Edite o Texto" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Advanced Settings">

    <ListPreference
        android:dialogTitle="Select duration"
        android:entries="@array/settings_list_preference_titles"
        android:entryValues="@array/settings_list_preference_values"
        android:key="list"
        android:summary="Clique para amostrar a lista de referencias"
        android:title="Lista de Preferencias" />
    <MultiSelectListPreference
        android:dialogTitle="Dialog title"
        android:entries="@array/settings_multi_select_list_preference_titles"
        android:entryValues="@array/settings_multi_select_list_preference_values"
        android:key="multi_select_list"
        android:title="CheckBox de Preferencias" />
    <SwitchPreference
        android:key="switch"
        android:title="AutoPlay"
        android:summary="Clique para Ligar/ Desligar"
        android:defaultValue="true"/>

    </PreferenceCategory>

    <Preference
        android:summary="Click to start an activity"
        android:title="Chamar Actividade">
        <intent
            android:action="irshaad.harold.carlos.com.musicapromosettings.SETTING_START_ACTIVITY"
            android:targetClass="irshaad.harold.carlos.com.musicapromosettings.MyActivity"
            android:targetPackage="irshaad.harold.carlos.com.musicapromosettings" />
    </Preference>



    <Preference android:title="@string/prefs_web_page" >
        <intent android:action="android.intent.action.VIEW"
            android:data="http://www.musicapromo.net" />
    </Preference>

</PreferenceScreen>
