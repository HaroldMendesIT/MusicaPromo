<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SobreNosActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="71dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Sobre Nós"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-55dp"
        app:srcCompat="@drawable/ic_logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:fontFamily="sans-serif-condensed"
        android:text="Desenvolvedores da Aplicação"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="176dp"
        android:fontFamily="sans-serif-condensed"
        android:text="
Irshaad Momad Dadabay
         Carlos Hilario Massuanganhe
         Harold Carlos Mendes
" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/textView"
        android:fontFamily="sans-serif-condensed"
        android:text="Somos estudante de tecnologia de informação na Universidade Católica de Moçambique
(faculdade de economia e gestão). Desenvolvemos esta aplicação
com o objectivo de tornar o site de musicapromo mais próximo de si."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="11dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Este é um aplicativo web de Musicapromo, que tem como objectivo mostrar aos seus usuários as musicas africanas
como diferentes estilos como (Marrabenta, Pandza, Kizomba, Afro House, Hip Hop, Jazz, RnB, Zouk, Funk etc)."
        android:textSize="18sp" />
</RelativeLayout>